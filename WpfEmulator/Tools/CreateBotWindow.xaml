<Window x:Class="Games.NBall.WpfEmulator.CreateBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" Width="300"
    Title="工具-预创建角色" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow">

                <Canvas>
                    <Label Content="前缀：" Canvas.Left="10" Canvas.Top="29"></Label>
                    <TextBox x:Name="txtBotPrev" Text="$Bot" Width="214" Canvas.Left="56" Canvas.Top="33" Style="{DynamicResource SimpleTextBox}"></TextBox>
                    <Label Content="数量：" Canvas.Left="10" Canvas.Top="59"></Label>
                    <TextBox x:Name="txtBotCount" Text="10" Width="214" Canvas.Left="56" Canvas.Top="61" Style="{DynamicResource SimpleTextBox}"></TextBox>
                    <Button x:Name="btnCreateBot" Content="创建" Width="74" Height="25" Canvas.Left="107" Canvas.Top="107" Click="btnCreateBot_Click"></Button>
                </Canvas>
</Window>
